# AI Code Reviewer - 开发环境变量示例
# 复制此文件为 dev.env 并填入实际值

# ===========================================
# 数据库配置
# ===========================================
DB_URL=jdbc:mysql://localhost:3306/ai_reviewer
DB_USER=root
DB_PASS=your_database_password
DB_DRIVER=com.mysql.cj.jdbc.Driver

# ===========================================
# GitHub 集成配置
# ===========================================
GITHUB_API_BASE=https://api.github.com
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret
GITHUB_ACCESS_TOKEN=your_github_access_token

# ===========================================
# GitLab 集成配置
# ===========================================
GITLAB_API_BASE=https://gitlab.com/api/v4
GITLAB_CLIENT_ID=your_gitlab_client_id
GITLAB_CLIENT_SECRET=your_gitlab_client_secret
GITLAB_WEBHOOK_SECRET=your_gitlab_webhook_secret
GITLAB_ACCESS_TOKEN=your_gitlab_access_token

# ===========================================
# AI 模型配置
# ===========================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_API_BASE=https://api.anthropic.com
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Azure OpenAI (可选)
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=your_deployment_name

# 本地模型 (可选)
LOCAL_MODEL_API_BASE=http://localhost:11434
LOCAL_MODEL_NAME=llama3.1:8b

# ===========================================
# 应用配置
# ===========================================
# 后端服务端口
BACKEND_PORT=8080
BACKEND_CONTEXT_PATH=/api

# 前端服务端口
FRONTEND_PORT=8081
FRONTEND_CONTEXT_PATH=/

# ===========================================
# 安全配置
# ===========================================
# JWT 密钥（用于会话管理）
JWT_SECRET=your_jwt_secret_key_minimum_256_bits
JWT_EXPIRATION=3600

# 系统管理员密码
ADMIN_PASSWORD=your_admin_password

# ===========================================
# 报告生成配置
# ===========================================
# 报告输出目录
REPORTS_OUTPUT_DIR=./reports
REPORTS_BASE_URL=http://localhost:8080/reports

# PDF 生成配置
PDF_FONT_PATH=/path/to/fonts
PDF_ENABLE_WKHTMLTOPDF=false

# ===========================================
# 日志配置
# ===========================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/ai-reviewer.log
LOG_MAX_FILE_SIZE=100MB
LOG_MAX_HISTORY=30

# ===========================================
# 性能配置
# ===========================================
# 线程池配置
THREAD_POOL_CORE_SIZE=4
THREAD_POOL_MAX_SIZE=16
THREAD_POOL_QUEUE_CAPACITY=100

# AI 请求限制
AI_REQUEST_TIMEOUT=30
AI_REQUEST_MAX_CONCURRENT=5
AI_REQUEST_RATE_LIMIT=100

# ===========================================
# 监控配置 (可选)
# ===========================================
# Prometheus 监控
METRICS_ENABLED=true
METRICS_ENDPOINT=/actuator/prometheus

# Sentry 错误跟踪 (可选)
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# ===========================================
# 缓存配置 (可选)
# ===========================================
# Redis 缓存 (可选)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DATABASE=0

# ===========================================
# 对象存储配置 (可选)
# ===========================================
# AWS S3 (用于报告存储)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ai-reviewer-reports

# MinIO (本地对象存储)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET=ai-reviewer-reports
